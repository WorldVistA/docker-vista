# init script for VistA

# Debian LSB info
### BEGIN INIT INFO
# Provides:          foiavista
# Required-Start:    $remote_fs $syslog
# Required-Stop:     $remote_fs $syslog
# Default-Start:     2 3 4 5
# Default-Stop:      0 1 6
# Short-Description: Start VistA services at boot time
# Description:       Starts/Stops VistA instances in a sane way.
#                    Includes starting TaskMan.
### END INIT INFO

# Setup environment variables
# This path will be replaced with the correct $basedir when a VistA instance
# is created. This script will need to have it hardcoded
source /home/foia/etc/env

cleanup() {
    # If a database is shutdown cleanly there shouldn't be anything in the
    # journals to replay, so we can run this without worry
    echo "Ensuring a consistent database (mupip journal -rollback -backward)"
    su $instance -c "$gtm_dist/mupip journal -rollback -backward '*'"

    # Rundown relinkctl files
    su $instance -c "$gtm_dist/mupip rundown -relinkctl"
    # Recover Octo region
    # TODO: AIM region is not journaled... Need to fix that and do that later
    # This doesn't work, with replication, as it needs to be replicated with journaling.
    # TODO: Move Octo to its own SI replicated container
    #if [ -f $basedir/lib/gtm/plugin/bin/octo ] ; then
    #    echo "Recovering Octo"
    #    su $instance -c "$gtm_dist/mupip journal -recover -backward $basedir/j/octo.mjl"
    #fi

    # Delete temp and then recreate
    echo "Deleting and recreating temp region"
    rm -vf $basedir/g/temp.dat
    su $instance -c "$gtm_dist/mupip create -region=TEMP"
}

# Start VistA background tasks
startvista() {
    # Start Dummy Replication (needed to activate journal pool)
    su $instance -c "$basedir/bin/repl/orig/setup.sh"

    # Start TaskMan
    echo "Starting TaskMan"
    su $instance -c "cd $basedir/tmp && $gtm_dist/mumps -run START^ZTMB"
    
    # Add group ownership to relinkctl files
    echo "Adding group ownership to relinkctl files"
    su $instance -c "cd $basedir/tmp && chmod g+w *relinkctl* && ls -l *relinkctl*"

    # Start M-Web-Server @ 9080
    if [ -f $basedir/r/_webreq.m ] || [ -f $basedir/p/_webreq.m ]; then
        echo "Starting M Web Server"
        su $instance -c "cd $basedir/tmp && $gtm_dist/mumps -r %XCMD 'do job^%webreq(9080)'"
    fi

    # Start Octo
    if [ -f $basedir/lib/gtm/plugin/bin/rocto ] ; then
        echo "Starting Rocto"
	# The next line doesn't work with replication, as the region needs to be replicated too.
	# TODO: move Octo to its own SI replicated container
        #su $instance -c "$gtm_dist/mupip set -journal=\"enable,on,before,file=$basedir/j/octo.mjl\" -file $basedir/g/octo.dat"
        su $instance -c "cd $basedir && $basedir/lib/gtm/plugin/bin/rocto > $basedir/log/rocto.log 2>&1 &"
    fi
}

primary() {
    # $1 -> Who to connect to
    # Start Origin replication
    su $instance -c "$basedir/bin/repl/orig/start.sh $1"
    su $instance -c "$basedir/bin/repl/orig/mon.sh"
}

secondary() {
    # $1 -> Name of the secondary.
    # TODO: This could be the hostname, but I am not sure
    #       Think about it.
    # Set-up replication instance file
    su $instance -c "$basedir/bin/repl/recv/setup.sh $1"

    # Start Receiving replication
    su $instance -c "$basedir/bin/repl/recv/start.sh"
    su $instance -c "$basedir/bin/repl/recv/mon.sh"
}

#TODO: Implement stop for secondaries
#TODO: Add $3 to pass a port number

stop() {
    # Stop TaskMan
    su $instance -c "mumps -run ^%XCMD 'S U=\"^\" D STOP^ZTMKU' << EOF
Y
Y
Y
EOF"
    
    # Wait for TaskMan to stop
    echo "Waiting for TaskMan to stop (2 sec)"
    sleep 2

    # Look for M processes and terminate them nicely
    processes=$(pgrep mumps)
    if [ ! -z "${processes}" ] ; then
        echo "Stopping any remaining M processes nicely"
        for i in ${processes}
        do
            mupip stop ${i}
        done

        # Wait for process to react to mupip stop instead of force kill later
        sleep 5
    fi

    # Look for M processes that are still running
    processes=$(pgrep mumps)
    if [ ! -z "${processes}" ] ; then
        #TODO: logging required here
        echo "M process are being shutdown forcefully!"
        pkill -9 mumps
    fi

    # Stop Rocto processes
    processes=$(pgrep rocto)
    if [ ! -z "${processes}" ] ; then
	    echo "Stopping Rocto"
	    pkill rocto
	    sleep 1
    fi

    # If Rocto is still running, force kill it
    processes=$(pgrep rocto)
    if [ ! -z "${processes}" ] ; then
	    echo "Force Stopping Rocto"
	    pkill -9 rocto
    fi

    lsof $basedir/g/*

    # Stop replication
    if [ -f $basedir/g/db.repl ] ; then
        su $instance -c "$basedir/bin/repl/orig/stop.sh"
    fi

    # Rundown everything
    mupip rundown -reg '*'
}

echo "Running init script with arguments $1 and $2"
case "$1" in
    start)
	cleanup
        startvista
        ;;
    startprimary)
	cleanup
	startvista
	primary $2
	;;
    startsecondary)
	cleanup
	secondary $2
	;;
    stop)
        stop
        ;;
    restart)
        stop
        start
        ;;
    *)
        echo "Usage: $0 {start|startprimary|startsecondary|stop|restart}"
        ;;
esac
